{
  "hooks": {
    "SessionStart": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/ghe_init.py",
            "timeout": 15,
            "suppressOutput": true
          },
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/auto_transcribe.py check",
            "timeout": 10,
            "suppressOutput": true
          },
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/session_recover.py",
            "timeout": 30,
            "suppressOutput": true
          },
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/transcription_notify.py",
            "timeout": 5,
            "suppressOutput": false
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/transcription_enforcer.py store",
            "timeout": 5,
            "suppressOutput": true
          },
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/check_issue_set.py",
            "timeout": 5,
            "suppressOutput": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/transcription_enforcer.py store-response",
            "timeout": 10,
            "suppressOutput": true
          },
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/transcription_enforcer.py verify",
            "timeout": 30,
            "suppressOutput": true
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/transcribe_reminder.py",
            "timeout": 5000,
            "suppressOutput": true
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/detect_issue_changes.py",
            "timeout": 45,
            "suppressOutput": false
          }
        ]
      }
    ]
  }
}
